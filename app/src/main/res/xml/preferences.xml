<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:key="adapter"
        android:title="Adapter settings">
        <EditTextPreference
            android:background="@drawable/border"
            android:defaultValue="OBDII"
            android:dialogTitle="Bluetooth OBD adapter name"
            android:key="pref.adapter.id"
            android:title="Adapter name"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>


    <PreferenceCategory
        android:key="mode"
        android:title="Mode settings">
        <SwitchPreference
            android:defaultValue="true"
            android:key="pref.mode.mode1.enabled"
            android:title="Generic mode enabled" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="pref.mode.mode22.enabled"
            android:title="Mode 22 enabled" />

    </PreferenceCategory>



    <PreferenceCategory android:title="Supported PID's">
        <org.openobd2.core.logger.ui.preferences.Mode1PidListPreferences
            android:defaultValue="@array/perf_empty_array"
            android:key="pref.pids.generic.supported"
            android:summary="Generic PID's for Mode 1"
            android:title="Generic" />

        <org.openobd2.core.logger.ui.preferences.Mode22PidListPreferences
            android:defaultValue="@array/perf_empty_array"
            android:key="pref.pids.mode22.supported"
            android:summary="Alfa Romeo specific PID's"
            android:title="Mode 22" />
    </PreferenceCategory>


</PreferenceScreen>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:key="prefs.root">

    <PreferenceCategory
        android:key="adapter"
        android:title="Adapter settings">

        <ListPreference
            android:defaultValue="bluetooth"
            android:dialogTitle="Adapter connection type"
            android:entries="@array/prefs.connection_type_array"
            android:entryValues="@array/prefs.connection_type_array"
            android:key="pref.selected.connection.type"
            android:summary="Adapter connection type" />

        <PreferenceCategory
            android:key="connection.type.bluetooth"
            android:title="Bluetooth settings">

            <org.openobd2.core.logger.ui.preferences.AdaptersListPreferences
                android:defaultValue="@array/prefs.empty_array"
                android:dialogTitle="Bluetooth adapter name"
                android:key="pref.adapter.id"
                android:summary="Available bluetooth devices" />
        </PreferenceCategory>


        <PreferenceCategory
            android:key="connection.type.wifi"
            android:title="Wifi settings">

            <EditTextPreference
                android:defaultValue="V-LINK"
                android:dialogTitle="SSID"
                android:key="pref.adapter.connection.tcp.wifi.ssid"
                android:summary="SSID" />

            <EditTextPreference
                android:defaultValue="192.168.0.10"
                android:dialogTitle="Host"
                android:key="pref.adapter.connection.tcp.host"
                android:summary="Host" />

            <EditTextPreference
                android:defaultValue="35000"
                android:dialogTitle="Port"
                android:key="pref.adapter.connection.tcp.port"
                android:summary="Port" />

        </PreferenceCategory>

        <PreferenceCategory
            android:key="diagnosis"
            android:title="Diagnosis">
            <CheckBoxPreference
                android:defaultValue="false"
                android:key="pref.adapter.diagnosis.command.frequency.enabled"
                android:singleLineTitle="false"
                android:summary="Display commands frequency" />
        </PreferenceCategory>

        <PreferenceCategory
            android:key="init"
            android:title="Init">

            <ListPreference
                android:defaultValue="500"
                android:entries="@array/prefs.init_delay"
                android:entryValues="@array/prefs.init_delay"
                android:key="pref.adapter.init.delay"
                android:summary="Init delay" />

            <ListPreference
                android:defaultValue="AUTO"
                android:entries="@array/prefs.init_protocol"
                android:entryValues="@array/prefs.init_protocol"
                android:key="pref.adapter.init.protocol"
                android:summary="Protocol" />

            <ListPreference
                android:defaultValue=""
                android:entries="@array/prefs.init_header"
                android:entryValues="@array/prefs.init_header"
                android:key="pref.adapter.init.header22"
                android:summary="Header 22" />

            <ListPreference
                android:defaultValue=""
                android:entries="@array/prefs.init_header"
                android:entryValues="@array/prefs.init_header"
                android:key="pref.adapter.init.header01"
                android:summary="Header 01" />

        </PreferenceCategory>

        <PreferenceCategory android:title="General settings">
            <PreferenceScreen
                android:singleLineTitle="false"
                android:summary="Parameter IDs to query"
                app:isPreferenceVisible="true"
                app:key="prefs.pids.query">

                <PreferenceCategory android:title="Parameter IDs to query">
                    <org.openobd2.core.logger.ui.preferences.PidListPreferences
                        android:key="pref.pids.generic.high"
                        android:singleLineTitle="false"
                        android:summary="High priority Parameter IDs"
                        android:dialogTitle="High priority Parameter IDs"
                        app:priority="high"  />

                    <org.openobd2.core.logger.ui.preferences.PidListPreferences
                        android:key="pref.pids.generic.low"
                        android:singleLineTitle="false"
                        android:summary="Low priority Parameter IDs"
                        android:dialogTitle="Low priority Parameter IDs"
                        app:priority="low" />

                    <org.openobd2.core.logger.ui.preferences.SupportedPidsPreferences
                        android:key="pref.pids.supported"
                        android:singleLineTitle="false"
                        android:dialogTitle="Parameter IDs supported by ECU\n(fetched after first successful connection to the ECU)"
                        android:summary="Parameter IDs supported by ECU\n(fetched after first successful connection to the ECU)"
                       />

                </PreferenceCategory>
            </PreferenceScreen>

            <CheckBoxPreference
                android:defaultValue="true"
                android:dialogTitle="Result cache enabled"
                android:key="pref.adapter.cache.result.enabled"
                android:summary="Result cache enabled" />

            <CheckBoxPreference
                android:defaultValue="true"
                android:dialogTitle="Batch enabled"
                android:key="pref.adapter.batch.enabled"
                android:summary="Enable batch mode" />


            <CheckBoxPreference
                android:defaultValue="false"
                android:dialogTitle="Adaptive timeout enabled"
                android:key="pref.adapter.adaptive.enabled"
                android:summary="Adaptive timeout enabled" />

            <CheckBoxPreference
                android:defaultValue="true"
                android:dialogTitle="Reconnect automatically"
                android:key="pref.adapter.reconnect"
                android:singleLineTitle="false"
                android:summary="Reconnect automatically when errors occur" />


            <ListPreference
                android:defaultValue="6"
                android:entries="@array/prefs.command_frequency"
                android:entryValues="@array/prefs.command_frequency"
                android:key="pref.adapter.command.freq"
                android:summary="Command frequency" />
        </PreferenceCategory>
    </PreferenceCategory>

    <PreferenceCategory
        android:key="power"
        android:title="Power settings">
        <CheckBoxPreference
            android:defaultValue="false"
            android:dialogTitle="Connect adapter on power"
            android:key="pref.adapter.power.connect_adapter"
            android:summary="Connect adapter on power" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:dialogTitle="Screen off"
            android:key="pref.adapter.power.screen_off"
            android:summary="Screen off when disconnected" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:dialogTitle="Disable bluetooth"
            android:key="pref.adapter.power.bt_off"
            android:summary="Disable bluetooth" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Views">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref.toolbar.hide.landscape"
            android:singleLineTitle="false"
            android:summary="Hide toolbar when landscape" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref.toolbar.hide.doubleclick"
            android:singleLineTitle="false"
            android:summary="Hide toolbar when double click" />

        <PreferenceScreen
            android:summary="Gauge view configuration"
            app:key="prefs.gauge">

            <PreferenceCategory android:title="General settings">
                <CheckBoxPreference
                    android:defaultValue="true"
                    android:key="pref.gauge.view.enabled"
                    android:summary="Enable the view" />
            </PreferenceCategory>
            <PreferenceCategory android:title="Parameter IDs">
                <org.openobd2.core.logger.ui.preferences.PidListPreferences
                    android:defaultValue="@array/prefs.empty_array"
                    android:key="pref.gauge.pids.selected"
                    android:dialogTitle="Displayed Parameter IDs"
                    android:summary="Displayed Parameter IDs" />
            </PreferenceCategory>
        </PreferenceScreen>
        <PreferenceScreen
            android:summary="Metrics view configuration"
            app:key="prefs.metrics">

            <CheckBoxPreference
                android:defaultValue="true"
                android:key="pref.metrics.view.enabled"
                android:summary="Enable the view" />
        </PreferenceScreen>

        <PreferenceScreen
            android:summary="Graph view configuration"
            app:key="prefs.graph">

            <PreferenceCategory android:title="General settings">
                <CheckBoxPreference
                    android:defaultValue="true"
                    android:key="pref.graph.view.enabled"
                    android:summary="Enable the view" />

                <CheckBoxPreference

                    android:defaultValue="true"
                    android:key="pref.graph.cache.enabled"
                    android:summary="Cache enabled" />

                <EditTextPreference
                    android:defaultValue="20"
                    android:dialogTitle="X-Axis: Moving time ms"
                    android:inputType="number"
                    android:key="pref.graph.x-axis.minimum-shift.time"
                    android:singleLineTitle="false"
                    android:summary="X-Axis moving time" />

                <EditTextPreference
                    android:defaultValue="20000"
                    android:dialogTitle="X-Axis: Start moving after ms"
                    android:inputType="number"
                    android:key="pref.graph.x-axis.start-moving-after.time"
                    android:singleLineTitle="false"
                    android:summary="X-Axis start moving after" />
            </PreferenceCategory>

            <PreferenceCategory android:title="Parameter IDs">
                <org.openobd2.core.logger.ui.preferences.PidListPreferences
                    android:defaultValue="@array/prefs.empty_array"
                    android:key="pref.graph.pids.selected"
                    android:dialogTitle="Displayed Parameter IDs"
                    android:summary="Displayed Parameter IDs" />
            </PreferenceCategory>

            <PreferenceCategory android:title="Trips">
                <CheckBoxPreference
                    android:defaultValue="false"
                    android:key="pref.trips.recordings.display_info"
                    android:singleLineTitle="false"
                    android:summary="Display Trip Info" />

                <CheckBoxPreference
                    android:defaultValue="false"
                    android:key="pref.trips.recordings.save.short.trip"
                    android:singleLineTitle="false"
                    android:summary="Record trips shorten than 5s length (engine start)" />

                <org.openobd2.core.logger.ui.preferences.TripsListPreferences
                    android:defaultValue="@array/prefs.empty_array"
                    android:key="pref.graph.trips.selected"
                    android:summary="Load trip" />
            </PreferenceCategory>
        </PreferenceScreen>

        <PreferenceScreen
            android:summary="Dashboard view configuration"
            app:key="prefs.dashboard">
            <PreferenceCategory android:title="General settings">
                <CheckBoxPreference
                    android:defaultValue="false"
                    android:key="pref.dash.top.values.blink"
                    android:singleLineTitle="false"
                    android:summary="Alarm for highest values" />

                <CheckBoxPreference
                    android:defaultValue="false"
                    android:key="pref.dash.swipe.to.delete"
                    android:singleLineTitle="false"
                    android:summary="Swipe to delete metric" />

                <CheckBoxPreference
                    android:defaultValue="false"
                    android:key="pref.dash.top.values.red.color"
                    android:singleLineTitle="false"
                    android:summary="Highlight top values" />

                <CheckBoxPreference
                    android:defaultValue="true"
                    android:key="pref.dash.view.enabled"
                    android:summary="Enable the view" />


                <ListPreference
                    android:defaultValue="0"
                    android:entries="@array/prefs.dash_color_themes"
                    android:entryValues="@array/prefs.dash_color_themes"
                    android:key="pref.dash.theme"
                    android:summary="Color theme" />



                <CheckBoxPreference
                    android:defaultValue="false"
                    android:key="pref.dash.gauge.view.visible"
                    android:summary="Gauge: Show the view" />

                <CheckBoxPreference
                    android:defaultValue="true"
                    android:key="pref.dash.dash.view.visible"
                    android:singleLineTitle="false"
                    android:summary="Dashboard: Show the view" />
            </PreferenceCategory>
            <PreferenceCategory android:title="Parameter IDs">
                <org.openobd2.core.logger.ui.preferences.PidListPreferences
                    android:key="pref.dash.pids.selected"
                    android:dialogTitle="Dashboard: Displayed Parameter IDs"
                    android:summary="Dashboard: Displayed Parameter IDs" />

                <org.openobd2.core.logger.ui.preferences.PidListPreferences
                    android:key="pref.dash.gauge_pids.selected"
                    android:dialogTitle="Gauge: Displayed Parameter IDs"
                    android:summary="Gauge: Displayed Parameter IDs" />
            </PreferenceCategory>

        </PreferenceScreen>

        <PreferenceCategory android:title="Debug">
            <CheckBoxPreference
                android:defaultValue="false"
                android:key="pref.debug.generator.enabled"
                android:summary="Enable data generator" />

            <CheckBoxPreference
                android:defaultValue="false"
                android:key="pref.debug.view.enabled"
                android:summary="Enable the view" />
        </PreferenceCategory>
    </PreferenceCategory>
</PreferenceScreen>

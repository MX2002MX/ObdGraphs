<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/vehicle_profile"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:text="@string/trip_vehicle_profile"
            android:textColor="#FFFF00"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/trip_start_date"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:gravity="start"
            android:text="@string/trip_start_date"
            android:textAllCaps="false"
            android:textColor="#FFFF00"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/trip_time"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="@string/trip_time"
            android:textColor="#FFFF00"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:gravity="center"

            android:orientation="vertical" >
            <Button
                android:id="@+id/trip_load"
                android:gravity="center"
                android:text="Load"
                android:textSize="10sp"  android:layout_height="fill_parent" android:layout_width="fill_parent"/>

            <Button
                android:id="@+id/trip_delete"
                android:gravity="center"
                android:text="Delete"
                android:textSize="10sp"  android:layout_height="fill_parent" android:layout_width="fill_parent"/>

        </LinearLayout>

    </TableRow>
</androidx.constraintlayout.widget.ConstraintLayout>
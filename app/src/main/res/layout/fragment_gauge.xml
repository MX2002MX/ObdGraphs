<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="org.obd.graphs.ui.gauge.GaugeFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:scaleType="center"
        android:src="@drawable/background"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/virtual_view_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/virtual_view_1"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:textSize="11sp"
                android:text="@string/virtual_screen_1"
                android:layout_marginEnd="4dp"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/virtual_view_2"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:textSize="11sp"
                android:layout_marginEnd="4dp"
                android:text="@string/virtual_screen_2"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/virtual_view_3"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:textSize="11sp"
                android:layout_marginEnd="4dp"
                android:text="@string/virtual_screen_3"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/virtual_view_4"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:textSize="11sp"
                android:layout_marginEnd="4dp"
                android:text="@string/virtual_screen_4"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/virtual_view_5"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:textSize="11sp"
                android:layout_marginEnd="4dp"
                android:text="@string/virtual_screen_5"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/virtual_view_6"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:textSize="11sp"
                android:layout_marginEnd="4dp"
                android:text="@string/virtual_screen_6"
                style="?android:attr/buttonBarButtonStyle" />


            <Button
                android:id="@+id/virtual_view_7"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:textSize="11sp"
                android:layout_marginEnd="4dp"
                android:text="@string/virtual_screen_7"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/virtual_view_8"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:textSize="11sp"
                android:layout_marginEnd="4dp"
                android:text="@string/virtual_screen_8"
                style="?android:attr/buttonBarButtonStyle" />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
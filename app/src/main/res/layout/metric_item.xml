<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tablelayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="2dip"
        android:paddingStart="0dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/metric_mode"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:gravity="start"
                android:paddingStart="2dp"
                android:paddingEnd="0dp"
                android:text="@string/pid.mode"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/metric_name"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:gravity="start"
                android:paddingEnd="0dp"
                android:paddingStart="4dp"
                android:text="@string/pid.metric_name"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/metric_min_value"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@string/pid.value_min"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/metric_max_value"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@string/pid.value_max"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/metric_avg_value"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@string/pid.value_avg"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/metric_value"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingStart="0dp"
                android:paddingEnd="6dp"
                android:text="@string/pid.value"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:layout_weight="2"
                android:background="#FF909090"
                android:padding="2dip" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
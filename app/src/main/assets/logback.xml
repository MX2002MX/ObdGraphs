<configuration>
    <appender name="logcat" class="ch.qos.logback.classic.android.LogcatAppender">
        <tagEncoder>
            <pattern>%logger{12}</pattern>
        </tagEncoder>
        <encoder>
            <pattern>%msg</pattern>
        </encoder>
    </appender>

    <logger name="org.obd.metrics.transport.DefaultConnector"
        level="info" additivity="false">
        <appender-ref ref="logcat" />
    </logger>

    <root level="info">
        <appender-ref ref="logcat" />
    </root>
</configuration>